.Side-bar
  .Side-bar__user
    .Side-bar__userbox
      %h3.Side-bar__name
        = current_user.name
      .Side-bar__btn
        = link_to new_group_path, class: "Side-bar__btn--edit" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: " Side-bar__btn--cog" do
          = icon('fas', 'cog')
        
  .Side-bar__grouplist
    - current_user.groups.each do |group|
      .Side-bar__group
        = link_to group_messages_path(group) do
          .Side-bar__group-name
            = group.name
          .Side-bar__group-message
            = group.show_last_message
   
      
